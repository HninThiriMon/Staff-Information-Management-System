
@model StaffInformationManagementSystem.Models.User

@{
    Layout = "~/Views/Shared/_Registration.cshtml";
    ViewBag.Title = "Signup";
}



@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@



    <label for="tab-1" class="tab">@Html.ActionLink("Login", "Login")</label>
    <label for="tab-2" class="tab">@Html.ActionLink("Sign Up", "Signup")</label>
    <div class="login-form">


    

            <div class="group">
                <label for="user" class="label">Username or Email</label>
                <input id="user" type="text" class="input">
            </div>
            <div class="group">
                <label for="pass" class="label">Password</label>
                <input id="pass" type="password" class="input" data-type="password">
            </div>

            <div class="group">
                <input type="submit" class="button" value="Sign Up">
            </div>


            <div class="hr"></div>
        </div>








}



